{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
   
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,


    /* Paths */
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src", // ðŸ‘ˆ VERY important
    "paths": {
      "@/*": ["*"] // ðŸ‘ˆ Match all folders inside "src"
    },
  

    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,

    /* Type Checking */
    "strict": true,
  
    
  },
  "include": ["src"],
  "exclude": [
        "node_modules","dist"
  ]
}
