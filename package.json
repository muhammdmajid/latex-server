{
  "name": "latex-server",
  "version": "1.0.0",
  "description": "A professional LaTeX-to-PDF server built with Express.js, featuring middleware integration, logging, file handling, and robust configuration using dotenv and envalid.",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "start:pm2": "npx pm2 start ecosystem.config.cjs",
    "build": "echo 'No build step required for JS'",
    "lint": "npx eslint \"src/**/*.{js,jsx}\"",
    "lint:fix": "npx eslint --fix \"src/**/*.{js,jsx}\"",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html,json}\"",
    "test": "echo \"No test configured\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammdmajid/latex-server.git"
  },
  "bugs": {
    "url": "https://github.com/muhammdmajid/latex-server/issues"
  },
  "homepage": "https://github.com/muhammdmajid/latex-server#readme",
  "keywords": [
    "express",
    "latex",
    "pdf",
    "file-upload",
    "logging",
    "dotenv",
    "envalid",
    "multer",
    "server"
  ],
  "author": "Muhammad Majid <majid.qauiub@gmail.com>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "http-status-codes": "^2.3.0",
    "multer": "^1.4.5-lts.2",
    "node-unrar-js": "^2.0.2",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "pm2": "^6.0.5",
    "prettier": "3.5.3"
  }
}
